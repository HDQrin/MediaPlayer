<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="musicplayer.cn.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        android:supportsRtl="true">
        <activity
            android:name="musicplayer.cn.musicplayer.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="musicplayer.cn.musicplayer.activity.Launcher"
            android:icon="@drawable/icon"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="musicplayer.cn.musicplayer.activity.LocalMusic"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="musicplayer.cn.musicplayer.activity.PlayerAndLyric"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="musicplayer.cn.musicplayer.activity.ArtistSelect"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="musicplayer.cn.musicplayer.activity.AlbumSelect"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="musicplayer.cn.musicplayer.activity.ArtistLocalMusic"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="musicplayer.cn.musicplayer.activity.AlbumLocalMusic"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="musicplayer.cn.musicplayer.activity.LoginActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="musicplayer.cn.musicplayer.activity.OnlineMusic"
            android:screenOrientation="portrait" >
        </activity>
        <service
            android:name="musicplayer.cn.musicplayer.service.PlayerService"
            android:screenOrientation="portrait" >
        </service>


    </application>

</manifest>
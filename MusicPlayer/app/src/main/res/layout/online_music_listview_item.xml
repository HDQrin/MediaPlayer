<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/onlinemusicitem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/sel_list_item"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/onlinemusic_listitem_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/left_indicator"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/onlinemusic_listitem_song_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/song"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/onlinemusic_listitem_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/onlinemusic_listitem_song_text"
            android:layout_below="@id/onlinemusic_listitem_song_text"
            android:layout_marginTop="5dp"
            android:baselineAlignBottom="true"
            android:src="@drawable/icon_local_marker" />

        <TextView
            android:id="@+id/onlinemusic_listitem_artist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/onlinemusic_listitem_song_text"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/onlinemusic_listitem_img"
            android:text="@string/artist"
            android:textColor="@color/darkgrey"
            android:textSize="14sp"
            android:singleLine="true" />

        <Button
            android:id="@+id/onlinemusic_download_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/sel_local_list_item_arrow_bg"
            android:drawableTop="@drawable/un_download"
            android:paddingTop="23dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
    </RelativeLayout>


</LinearLayout>